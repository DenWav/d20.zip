{
    "name": "d20.zip",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "license": "AGPL-3.0-only",
    "//": "I'm not a web developer, I know this copy nonsense is silly, but I don't know the right way to do it.",
    "scripts": {
        "clean": "rimraf dist",
        "copy": "npm run copy:base && npm run copy:public",
        "copy:base": "cpx \"{src/**,license.txt}\" dist",
        "copy:public": "cd public && cpx \"./**/*\" ../dist",
        "copy:watch": "concurrently 'npm run copy:base:watch' 'npm run copy:public:watch'",
        "copy:base:watch": "cpx \"{src/**,license.txt}\" dist --watch",
        "copy:public:watch": "cd public && cpx \"./**/*\" ../dist --watch",
        "compile": "tsc",
        "build": "tsc && esbuild src/vendor.ts --bundle --minify --sourcemap --format=esm --outfile=dist/vendor.js && npm run copy",
        "dev": "concurrently 'esbuild src/index.ts --bundle --outfile=dist/index.js --sourcemap --format=esm --watch' 'npm run copy:watch' 'live-server --no-browser dist'",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@dimforge/rapier3d-compat": "^0.11.2",
        "stats.js": "^0.17.0",
        "three": "^0.182.0"
    },
    "devDependencies": {
        "@types/three": "^0.182.0",
        "concurrently": "^9.2.1",
        "cpx2": "^8.0.0",
        "esbuild": "^0.27.2",
        "live-server": "^1.2.0",
        "prettier": "^3.8.1",
        "rimraf": "^6.1.2",
        "typescript": "^5.5.3"
    },
    "private": true
}
